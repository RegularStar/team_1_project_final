{
  "id": null,
  "uid": "skillbridge-chat-api",
  "title": "SkillBridge Chat API Observability",
  "tags": [
    "skillbridge",
    "chat-api"
  ],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "API p95 응답시간 (view별)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-default"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, view) (rate(django_http_requests_latency_seconds_by_view_method_bucket{view!=\"prometheus-metrics\"}[5m])))",
          "legendFormat": "{{view}}",
          "interval": ""
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1.5
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "요청 수 (상태 코드별)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-default"
      },
      "targets": [
        {
          "expr": "sum by (status, view) (rate(django_http_responses_total_by_status_view_method_total[1m]))",
          "legendFormat": "{{view}} {{status}}"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/s"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "stacking": "normal"
      }
    },
    {
      "type": "gauge",
      "title": "5분간 비정상 응답 수",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-default"
      },
      "targets": [
        {
          "expr": "sum(increase(django_http_responses_total_by_status_view_method_total{status!=\"200\"}[5m]))"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 9
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "min": 0,
        "max": 50,
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {
              "color": "green",
              "value": null
            },
            {
              "color": "yellow",
              "value": 1
            },
            {
              "color": "red",
              "value": 5
            }
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      }
    },
    {
      "type": "bargauge",
      "title": "view별 평균 응답시간",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-default"
      },
      "targets": [
        {
          "expr": "sum(rate(django_http_requests_latency_seconds_by_view_method_sum[5m])) by (view) / sum(rate(django_http_requests_latency_seconds_by_view_method_count[5m])) by (view)",
          "legendFormat": "{{view}}"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 9
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "누적 HTTP 요청 수",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-default"
      },
      "targets": [
        {
          "expr": "sum by (view) (increase(django_http_requests_total_by_view_transport_method_total[5m]))",
          "legendFormat": "{{view}}"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        },
        "stacking": "normal"
      }
    }
  ]
}
